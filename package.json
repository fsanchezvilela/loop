{
  "name": "loop",
  "private": "true",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "kickoff": "pnpm install && pnpm run prepare",
    "check-version": "node ./scripts/tools/valid-node-version.cjs",
    "dev": "pnpm run check-version && vite",
    "build:dev": "tsc && vite build",
    "build": "tsc -p tsconfig.prod.json && vite build",
    "test": "NODE_ENV=test jest",
    "test:update": "pnpm run test -- -u",
    "preview": "vite preview",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "pnpm run lint --fix",
    "format": "prettier --write './src/**/*'",
    "prepare": "husky install && bash -c 'chmod ug+x .husky/*'",
    "generate:icons": "npx @svgr/cli public/assets/icons/svg --out-dir src/assets/components/icons --icon --typescript --replace-attr-values \"white=currentColor\""
  },
  "dependencies": {
    "@radix-ui/react-form": "^0.0.3",
    "@tanstack/react-table": "^8.9.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "install": "^0.13.0",
    "jest-watch-typeahead": "^2.2.2",
    "localforage": "^1.10.0",
    "lucide-react": "^0.264.0",
    "match-sorter": "^6.3.1",
    "nanoid": "^4.0.2",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-query": "^3.39.3",
    "react-router-dom": "^6.14.2",
    "sort-by": "^1.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@swc/core": "^1.3.74",
    "@swc/jest": "^0.2.27",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.8",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "@vitejs/plugin-react-swc": "^3.3.2",
    "autoprefixer": "^10.4.14",
    "camelcase": "6",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.5.5",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "husky": "^8.0.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "lint-staged": "^13.2.3",
    "postcss": "^8.4.27",
    "prettier": "^3.0.1",
    "prettier-eslint": "^15.0.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.0.2",
    "vite": "^4.4.5"
  }
}
